# Memory optimization for CI environments
node-options=--max_old_space_size=8192 --max-semi-space-size=1024
prefer-offline=true
registry=https://registry.npmjs.org/
store-dir=.pnpm-store
# Reduce memory usage during install
side-effects-cache=false
shamefully-hoist=false
# Optimize for CI
reporter=silent
progress=false 
